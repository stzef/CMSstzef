<section id="portfolio" class="section-padding wow fadeInUp delay-05s">
  <div class="col-md-9">
  {% for habitacion in habitaciones %}
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <center><h1><span class="deco">{{habitacion.name}}</span></h1></center>
            <br><br>
          </div>
        </div>
        <div class="row">
          {% for habitaciondeta in habitacion.deta %}
                {% if loop.first %}
                  <div class="col-md-6">
                      <div class="row">
                        <div class="column">
                          <img src="{{habitaciondeta.image}}" onclick="openModal({{loop.index}});currentSlide(1)" class="hover-shadow">
                        </div>
                      </div>
                  </div>
                  <div class="col-md-6">
                    <h2>Descripci√≥n</h2>
                      {{habitaciondeta.contenthtml}}
                  </div>
                {% endif %}
          {% endfor %}
        </div>
      </div>
      <div id="{{loop.index}}" class="modal">
          <span class="close cursor" onclick="closeModal()">&times;</span>
          <div class="modal-content">
          {% for habitaciondeta in habitacion.deta %}
            <div class="mySlides">
              <img src="{{habitaciondeta.image}}" style="width:100%">
            </div>

            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>

            <div class="caption-container">
              <p id="caption"></p>
            </div>

            <div class="column">
              <img class="demo" src="{{habitaciondeta.image}}" onclick="currentSlide(1)" alt="Nature">
            </div>
          {% endfor %}

          </div>
      </div>

      <br><br>
  {% endfor %}
  </div>
  <div class="col-md-3">

  </div>

</section>
