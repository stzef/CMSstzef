        <div class="imagen">
          {% if loop.first %}
              <a class="prev" href="#{{i}}">&#10094;</a>
          {% else %}
              <a class="prev" href="#{{i-1}}">&#10094;</a>
          {% endif %}
          <a href="#"><img src="{{habitaciondeta.image}}"></a>
          {% if loop.last %}
              <a class="next" href="#{{i}}">&#10095;</a>
          {% else %}
              <a class="next" href="#{{i+1}}">&#10095;</a>
          {% endif %}
        </div>
      </div>
    {% set i = 0 %}
    {% endfor %}
{% endfor %}
