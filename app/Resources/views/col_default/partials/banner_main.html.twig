{% if current_page is defined %}
{# {% if current_page.ifMain %} #}
    <div class="col-md-12 col-lg-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
               {% for image in main_banner.deta %}


                    <li data-target="#carousel-example-generic" data-slide-to="0" class="{% if loop.first %}active{% endif %}"></li>
               {% endfor %}
            </ol>
            <div class="carousel-inner">
               {% for image in main_banner.deta %}
                    <div class="item {% if loop.first %}active{% endif %}">
                        <img class="slide-image" src="{{ image.image }}" alt="">
                    </div>
               {% endfor %}
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>

{% endif %}




