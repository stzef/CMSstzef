{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listado Galerias</h1>

    <table class="table" id="CMSstzef_list">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Principal</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cmsStzefBanner in cmsStzefBanners %}
            <tr>
                <td><a href="{{ path('admstzef_banners_show', { 'id': cmsStzefBanner.id }) }}">{{ cmsStzefBanner.name }}</a></td>
                <td>{% if cmsStzefBanner.ifMain %} <b>Si</b>{% else %}No{% endif %}</td>
                <td>
                    <ul class="list-unstyled">
                        <!--<li>
                            <a class="btn btn-" role="button" href="{{ path('admstzef_banners_show', { 'id': cmsStzefBanner.id }) }}">show</a>
                        </li>-->
                        <li>
                            <a class="btn btn-" role="button" href="{{ path('admstzef_banners_edit', { 'id': cmsStzefBanner.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul class="list-unstyled">
        <li>
            <a class="btn btn-success" role="button" href="{{ path('admstzef_banners_new') }}">Nueva Galeria</a>
        </li>
    </ul>
{% endblock %}
