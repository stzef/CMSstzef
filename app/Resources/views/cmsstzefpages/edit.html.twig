{% extends 'base.html.twig' %}
{% use 'bootstrap_3_layout.html.twig' %}
{% form_theme edit_form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <h1>Editar Pagina</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <div class="form-group">
            <label for="" class="control-label">
                {{ form_label(form_generic.idBanner) }}
            </label>
            {{ form_errors(form_generic.idBanner) }}
            {{ form_widget(form_generic.idBanner) }}
        </div>
        <div class="form-group">
            <label for="" class="control-label">
                {{ form_label(form_generic.urlFile) }}
            </label>
            {{ form_errors(form_generic.urlFile) }}
            {{ form_widget(form_generic.urlFile) }}
        </div>

        <input type="submit" class="btn btn-info" value="Editar" />
    {{ form_end(edit_form) }}

    <ul class="list-unstyled" >
        <li>
            <a class="btn btn-primary" role="button" href="{{ path('admstzef_pages_index') }}">Listado</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-danger" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/cruds/pages.js') }}"></script>
{% endblock %}
