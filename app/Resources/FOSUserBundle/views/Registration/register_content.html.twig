{% trans_default_domain 'FOSUserBundle' %}

<div id="login-overlay" class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h4 class="modal-title" id="myModalLabel"> Resgistrarse </h4>
		</div>

		<div class="modal-body">
			<div class="row">
				<div class="col-xs-8">
					<div class="well">

						<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
							<div id="fos_user_registration_form">
								<div class="form-group">
									<label class="control-label col-sm-4" for="fos_user_registration_form_email" class="required">Email</label>
									<div class="col-sm-8">
										<input class="form-control" type="email" id="fos_user_registration_form_email" name="fos_user_registration_form[email]" required="required">
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-sm-4" for="fos_user_registration_form_username" class="required">Usuario</label>
									<div class="col-sm-8">
										<input class="form-control" type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]" required="required" maxlength="255" pattern=".{2,}">
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-sm-4" for="fos_user_registration_form_plainPassword_first" class="required">Contraseña</label>
									<div class="col-sm-8">
										<input class="form-control" type="password" id="fos_user_registration_form_plainPassword_first" name="fos_user_registration_form[plainPassword][first]" required="required">
									</div>
								</div>
								<div class="form-group">
									<label class="control-label col-sm-4" for="fos_user_registration_form_plainPassword_second" class="required">Confirmacion Contraseña</label>
									<div class="col-sm-8">
										<input class="form-control" type="password" id="fos_user_registration_form_plainPassword_second" name="fos_user_registration_form[plainPassword][second]" required="required">
									</div>
								</div>
								{{  form_row(form._token) }}
							</div>
							<div class="form-group">
								<!--<input type="submit" value="registration.submit">-->
								<input type="submit" class="btn btn-success btn-block" id="_submit" name="_submit" value="Registrarse" />

							</div>
						</form>
					</div>
				</div>
				<div class="col-xs-4">
					<p class="lead">Ya tengo una <span class="text-success">Cuenta</span></p>
					<p><a href="{{ path('fos_user_security_login') }}" class="btn btn-info btn-block">Iniciar Sesión</a></p>
				</div>
			</div>
		</div>
	</div>
</div>
